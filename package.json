{
  "name": "letters-from-the-earth",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "server": "CAPTCHA_SECRET=$CAPTCHA_SECRET yarn run clean && yarn run build-client && babel-node app/server/server.js --presets env,react,stage-0",
    "build-client": "webpack --config ./webpack.config.ssr.js",
    "stage-test": "yarn run build-staging && node ./dist/server/server.js",
    "build-staging": "yarn run clean && yarn run ssr-build && yarn run build-staging-client",
    "clean": "rm -rf dist && mkdir dist",
    "ssr-build": "CAPTCHA_SECRET=$CAPTCHA_SECRET babel -d ./dist ./app --presets env,react,stage-0",
    "build-staging-client": "webpack --config ./webpack.config.production.js ",
    "start": "webpack-dev-server --progress --colors -w",
    "heroku-postbuild": "yarn run build-staging"
  },
  "repository": {},
  "author": "Sam Slotsky",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "html-webpack-plugin": "^2.30.1",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "history": "^4.7.2",
    "morgan": "^1.8.2",
    "react": "16.0.0-rc.3",
    "react-animations": "^0.1.0",
    "react-dom": "16.0.0-rc.3",
    "react-recaptcha": "^2.3.5",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-form": "^7.0.4",
    "redux-resolver": "^1.0.2",
    "redux-thunk": "^2.2.0",
    "request-ip": "^2.0.2",
    "styled-components": "^2.1.2",
    "validate-this": "^1.3.3",
    "webpack": "^3.6.0"
