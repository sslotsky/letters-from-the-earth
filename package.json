{
  "name": "letters-from-the-earth",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "exec": "babel-node --presets env,stage-0",
    "server": "yarn run clean && yarn run build-client && babel-node app/server/server.js --presets env,react,stage-0",
    "build-client": "webpack --config ./webpack.config.ssr.js",
    "stage-test": "yarn run build-staging && node ./dist/server/server.js",
    "build-staging": "yarn run clean && yarn run ssr-build && yarn run build-staging-client",
    "clean": "rm -rf dist && mkdir dist",
    "ssr-build": "babel -d ./dist ./app --presets env,react,stage-0",
    "build-staging-client": "webpack --config ./webpack.config.production.js ",
    "start": "webpack-dev-server --progress --colors -w",
    "migrate": "yarn run knex migrate:latest",
    "reset-db": "knex-migrate down --to 0 && knex-migrate up",
    "seed": "yarn run knex seed:run",
    "knex": "babel-node --presets env,react,stage-0 node_modules/.bin/knex",
    "heroku-postbuild": "yarn run build-staging && yarn run migrate"
  },
  "repository": {},
  "author": "Sam Slotsky",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "html-webpack-plugin": "^2.30.1",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "@orange-marmalade/paginate-this": "^4.0.0-beta-19",
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-styled-components": "^1.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "bookshelf": "^0.10.4",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "crypto-random-string": "^1.0.0",
    "dotenv": "^4.0.0",
    "email-validator": "^1.1.1",
    "express": "^4.15.4",
    "final-form": "^4.2.1",
    "heroku-ssl-redirect": "^0.0.4",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "jsonwebtoken": "^8.0.1",
    "knex": "^0.13.0",
    "knex-migrate": "^1.3.0",
    "morgan": "^1.8.2",
    "nodemailer": "^4.4.2",
    "pg": "^7.3.0",
    "querystring": "^0.2.0",
    "react": "^16.3.0-alpha.1",
    "react-animations": "^0.1.0",
    "react-dom": "^16.3.0-alpha.1",
    "react-final-form": "^3.1.0",
    "react-recaptcha": "^2.3.5",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "readline-sync": "^1.4.9",
    "redux": "^3.7.2",
    "redux-form": "^7.2.3",
    "redux-resolver": "^1.0.2",
    "redux-thunk": "^2.2.0",
    "request-ip": "^2.0.2",
    "styled-components": "^2.1.2",
    "validate-this": "^1.4.1",
    "webpack": "^3.6.0"
  }
}
